MONGODB_URI=mongodb://mongo:27017/toybox
MONGODB_DB=toybox
PORT=4000
REDIS_URL=redis://redis:6379

# CORS設定：カンマ区切りで複数オリジンを指定可能（例: http://localhost:3000,https://example.com）
# 本番ドメインに合わせて既定値を更新（HTTP運用→将来HTTPS想定）
CORS_ORIGINS=http://toybox.ayatori-inc.co.jp,https://toybox.ayatori-inc.co.jp,http://localhost:3000,http://127.0.0.1:3000
# 旧: CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# アップロードサイズ上限（MB）
# 種別別の上限（優先）
MAX_UPLOAD_MB_AVATAR=2
MAX_UPLOAD_MB_HEADER=5
MAX_UPLOAD_MB_POST=10
# 汎用フォールバック（設定なしの場合のデフォルト）
# MAX_UPLOAD_MB=500

# JWT認証
JWT_SECRET=change_me_strong_secret_in_production
# 本番では十分長い乱数に変更（例: OpenSSL で生成）
# 例) openssl rand -base64 48 | tr -d '\n'

# Cookie設定（デフォルト）
# 現状HTTP運用のため Secure=false。HTTPS移行後は true に変更。
COOKIE_SECURE=false

# カードマスターのTSVパス（未設定なら small.tsv を使用）
CARD_MASTER_TSV=src/data/card_master.tsv

# 画像生成連携（Nanobana想定）※今回は未使用・将来拡張
NANOBANA_API_URL=
NANOBANA_API_KEY=

# Cloudinary（Vercel/無料ホスティング時に使用）
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=