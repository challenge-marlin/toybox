{
  "name": "toybox-backend",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "main": "dist/src/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "dev:worker": "tsx watch src/workers/notificationWorker.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/src/server.js",
    "start:worker": "node dist/src/workers/notificationWorker.js",
    "test": "jest",
    "clear:submission-images": "tsx src/scripts/clearSubmissionImages.ts"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "mongoose": "^8.6.0",
    "multer": "^1.4.5-lts.1",
    "adm-zip": "^0.5.12",
    "bullmq": "^5.10.0",
    "ioredis": "^5.4.1",
    "dotenv": "^16.4.5",
    "zod": "^3.22.4",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "cookie-parser": "^1.4.6",
    "nodemailer": "^6.9.13",
    "sharp": "^0.33.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/adm-zip": "^0.4.4",
    "typescript": "^5.6.2",
    "tsx": "^4.19.1",
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.10",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "@types/jest": "^29.5.12",
    "@types/multer": "^1.4.12",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/cookie-parser": "^1.4.6"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "testEnvironment": "node",
    "extensionsToTreatAsEsm": [".ts"],
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        { "useESM": true }
      ]
    },
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    }
  }
}
